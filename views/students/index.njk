{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/students/create">New</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Membro</th>
                <th>Email</th>
                <th>Altura</th>
                <th>Peso</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{ student.avatar_url }}"></span>
                    {{ student.name }}
                </td>
                <td>{{ student.email }}</td>
                <td>{{ student.weight }} kg</td>
                <td>{{ student.height }} cm</td>
                <td><a href="/students/{{ student.id }}">ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}